{
  "name": "perps-spread-depth-data",
  "version": "1.0.0",
  "description": "Historical spread and depth data ingestion for perpetual futures exchanges",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "collect:once": "tsx src/main.ts --mode once",
    "collect:daemon": "tsx src/main.ts --mode daemon",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "tsx": "^4.19.0"
  },
  "dependencies": {
    "ws": "^8.18.0"
  }
}
